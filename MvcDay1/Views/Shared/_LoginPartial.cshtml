@using Microsoft.AspNetCore.Identity
@using MvcDay1.Data
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <div class="nav-link text-dark" title="Manage">Hello @User.Identity.Name!</div>
        </li>
        <li class="nav-item">
            <a asp-controller="Member" asp-action="Logout" class="nav-link btn btn-link text-dark">Logout</a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Member" asp-action="Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Member" asp-action="Login">Login</a>
        </li>
        <li class="nav-item">
            <form method="post" asp-action="SocialLogin" asp-controller="Member">
                <button type="submit" class="btn btn-link text-dark">Google SignIn</button>
            </form>
        </li>
    }
</ul>
